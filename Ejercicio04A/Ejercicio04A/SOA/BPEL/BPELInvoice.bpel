<process name="BPELInvoice"
               targetNamespace="http://xmlns.oracle.com/Ejercicio04A/Ejercicio04A/BPELInvoice"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://xmlns.oracle.com/Ejercicio04A/Ejercicio04A/BPELInvoice"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
               xmlns:ui="http://xmlns.oracle.com/soa/designer"
               xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:ess="http://xmlns.oracle.com/scheduler" xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap" xmlns:ns1="http://www.example.org"
         xmlns:ns2="http://xmlns.oracle.com/pcbpel/adapter/db/Ejercicio04A/Ejercicio04A/getInvoiceHeader"
         xmlns:ns3="http://xmlns.oracle.com/pcbpel/adapter/db/top/getInvoiceHeader"
         xmlns:ns4="http://xmlns.oracle.com/pcbpel/adapter/db/Ejercicio04A/Ejercicio04A/getInvoiceDetail"
         xmlns:ns5="http://xmlns.oracle.com/pcbpel/adapter/db/top/getInvoiceDetail"
         xmlns:ns6="http://xmlns.oracle.com/pcbpel/adapter/db/Ejercicio04A/Ejercicio04A/getCustDetails"
         xmlns:ns7="http://xmlns.oracle.com/pcbpel/adapter/db/top/getCustDetails">

  <import ui:processWSDL="true" namespace="http://xmlns.oracle.com/Ejercicio04A/Ejercicio04A/BPELInvoice" location="../WSDLs/BPELInvoice.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      PARTNERLINKS                                                      
      List of services participating in this BPEL process               
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="bpelinvoice_client" partnerLinkType="client:BPELInvoice" myRole="BPELInvoiceProvider"/>
    <partnerLink name="getInvoiceHeader" partnerLinkType="ns2:getInvoiceHeader_plt"
                 partnerRole="getInvoiceHeader_role"/>
    <partnerLink name="getInvoiceDetail" partnerLinkType="ns4:getInvoiceDetail_plt"
                 partnerRole="getInvoiceDetail_role"/>
    <partnerLink name="getCustDetails" partnerLinkType="ns6:getCustDetails_plt" partnerRole="getCustDetails_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:BPELInvoiceRequestMessage"/>
    <variable name="Invoke1_getInvoiceHeaderSelect_InputVariable"
              messageType="ns2:getInvoiceHeaderSelect_inputParameters"/>
    <variable name="Invoke1_getInvoiceHeaderSelect_OutputVariable" messageType="ns2:InvoiceHeaderCollection_msg"/>
    <variable name="InvokeinvoiceDetails_getInvoiceDetailSelect_InputVariable"
              messageType="ns4:getInvoiceDetailSelect_inputParameters"/>
    <variable name="InvokeinvoiceDetails_getInvoiceDetailSelect_OutputVariable"
              messageType="ns4:InvoiceDetailsCollection_msg"/>
    <variable name="InvokeCustDetails_getCustDetailsSelect_InputVariable"
              messageType="ns6:getCustDetailsSelect_inputParameters"/>
    <variable name="InvokeCustDetails_getCustDetailsSelect_OutputVariable"
              messageType="ns6:FinCustDetailsCollection_msg"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in BPELInvoice.wsdl) -->
    <receive name="receiveInput" partnerLink="bpelinvoice_client" portType="client:BPELInvoice" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="Assign1">
      <copy>
        <from>concat(substring($inputVariable.payload/ns1:fecha,1,4),"-", substring($inputVariable.payload/ns1:fecha,5,2),"-", substring($inputVariable.payload/ns1:fecha,7,2))</from>
        <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$inputVariable.payload/ns1:fecha</to>
      </copy>
      <copy>
        <from>$inputVariable.payload/ns1:fecha</from>
        <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$Invoke1_getInvoiceHeaderSelect_InputVariable.getInvoiceHeaderSelect_inputParameters/ns3:date</to>
      </copy>
      <copy>
        <from>'1111'</from>
        <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$InvokeinvoiceDetails_getInvoiceDetailSelect_InputVariable.getInvoiceDetailSelect_inputParameters/ns5:folio</to>
      </copy>
      <copy>
        <from>$inputVariable.payload/ns1:rfc</from>
        <to expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">$InvokeCustDetails_getCustDetailsSelect_InputVariable.getCustDetailsSelect_inputParameters/ns7:rfc</to>
      </copy>
    </assign>
    <invoke name="InvokeInvoiceHeader" partnerLink="getInvoiceHeader"
            portType="ns2:getInvoiceHeader_ptt" operation="getInvoiceHeaderSelect"
            inputVariable="Invoke1_getInvoiceHeaderSelect_InputVariable"
            outputVariable="Invoke1_getInvoiceHeaderSelect_OutputVariable" bpelx:invokeAsDetail="no"/>
    <invoke name="InvokeinvoiceDetails" bpelx:invokeAsDetail="no" partnerLink="getInvoiceDetail"
            portType="ns4:getInvoiceDetail_ptt" operation="getInvoiceDetailSelect"
            inputVariable="InvokeinvoiceDetails_getInvoiceDetailSelect_InputVariable"
            outputVariable="InvokeinvoiceDetails_getInvoiceDetailSelect_OutputVariable"/>
    <invoke name="InvokeCustDetails" bpelx:invokeAsDetail="no" partnerLink="getCustDetails"
            portType="ns6:getCustDetails_ptt" operation="getCustDetailsSelect"
            inputVariable="InvokeCustDetails_getCustDetailsSelect_InputVariable"
            outputVariable="InvokeCustDetails_getCustDetailsSelect_OutputVariable"/>
  </sequence>
</process>